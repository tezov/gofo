<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimPaddingElement_6">

    <TextView
        android:id="@+id/lbl_tag"
        android:layout_width="match_parent"
        android:background="@drawable/gray_gradiant_bg"
        android:layout_height="match_parent"
        android:paddingStart="2dp"
        android:paddingEnd="24dp"
        style="@style/TxtNorm"
        android:textSize="@dimen/dimText_big"
        tools:text="tag"/>

    <com.tezov.lib_java_android.ui.component.plain.ButtonIconMaterial
        android:id="@+id/btn_delete"
        style="@style/StyleGofoButtonTextViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        app:icon="@drawable/ic_cancel_24dp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_tag" />



</androidx.constraintlayout.widget.ConstraintLayout>